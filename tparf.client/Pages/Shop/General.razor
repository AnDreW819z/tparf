@page "/"
@inherits GeneralBase

@if (categories == null && errorMessage == null)
{
        <DisplaySpinner/>
}
else if (errorMessage != null)
{
        <DisplayError ErrorMessage = "@errorMessage" />
}
else
{
    <MudGrid Class="d-flex flex-wrap">
        <MudItem xs="12">
            <MudText Typo="Typo.h4" Align="Align.Center">Продукция</MudText>
        </MudItem>
        @if(categories != null)
        {
            <MudItem xs="12">
                <DisplayCategories categories ="@categories"></DisplayCategories>
            </MudItem>
        }
        
    </MudGrid>
}
