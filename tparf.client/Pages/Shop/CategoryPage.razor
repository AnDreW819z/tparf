@page "/category/{catId:long}"
@inherits CategoryPageBase

@if (category == null && errorMessage == null)
{
    <DisplaySpinner />
}
else if (errorMessage != null)
{
    <DisplayError ErrorMessage="@errorMessage" />
}
else
{
    <MudGrid Class="d-flex flex-wrap">
        @if(category.Children != null)
        {
            <MudItem xs="12">
                <DisplayCategories categories="category.Children"></DisplayCategories>
            </MudItem>
        }
        @if(products.Count > 0)
        {
            <MudItem xs="12">
                <DisplayProducts products="products"></DisplayProducts>
            </MudItem>
        }
    </MudGrid>
}

